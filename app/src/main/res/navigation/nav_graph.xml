<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.test.smartpost.presentation.fragments.authFragment.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.test.smartpost.presentation.fragments.registrationFragment.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/educationFragment"
        android:name="com.test.smartpost.presentation.fragments.educationFragment.EducationFragment"
        android:label="fragment_education"
        tools:layout="@layout/fragment_education" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.test.smartpost.presentation.fragments.mainFragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/personalFragment"
        android:name="com.test.smartpost.presentation.fragments.personalFragment.PersonalFragment"
        android:label="fragment_personal"
        tools:layout="@layout/fragment_personal" >
        <action
            android:id="@+id/action_personalFragment_to_editPersonalFragment"
            app:destination="@id/editPersonalFragment" />
        <action
            android:id="@+id/action_personalFragment_to_courseFragment"
            app:destination="@id/courseFragment" />

    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.test.smartpost.presentation.fragments.searchFragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.test.smartpost.presentation.fragments.detailsFragment.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="model"
            app:argType="com.test.smartpost.data.models.MainModel" />
    </fragment>
    <fragment
        android:id="@+id/editPersonalFragment"
        android:name="com.test.smartpost.presentation.fragments.personalFragment.EditPersonalFragment"
        android:label="fragment_edit_personal"
        tools:layout="@layout/fragment_edit_personal" />
    <fragment
        android:id="@+id/courseFragment"
        android:name="com.test.smartpost.presentation.fragments.courseFragment.CourseFragment"
        android:label="fragment_course"
        tools:layout="@layout/fragment_course" >
        <action
            android:id="@+id/action_courseFragment_to_personalFragment"
            app:destination="@id/personalFragment" />
    </fragment>
</navigation>