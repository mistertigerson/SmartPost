<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.personalFragment.PersonalFragment">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:text="@string/tv_title_rus"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"
        android:text="@string/tv_email_rus"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvProfession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmail"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"
        android:text="@string/choose_profession_rus"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvCarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProfession"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"
        android:text="карьера"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCarrier"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"
        android:text="контакты"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvContacts"
        android:layout_marginStart="180dp"
        android:layout_marginTop="5dp"
        android:text="город"
        android:textColor="@color/black"
        android:textStyle="bold" />





    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivAvatar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/Title"
        android:text="@string/btn_edit_rus"
        android:textColor="@color/black"
        app:cornerRadius="15dp" />


    <View
        android:id="@+id/viewDivide"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/btnEdit"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewDivide"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/background_card_view_course"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="15dp">

            <TextView
                android:id="@+id/tvAllCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/tv_course_rus"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAddCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/background_card_view_course"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="15dp">

            <TextView
                android:id="@+id/tvAddCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/tv_add_course_rus"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>